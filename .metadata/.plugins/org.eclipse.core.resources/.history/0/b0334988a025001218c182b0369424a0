package com.example.cameratest;

import android.app.Activity;

public abstract class CameraPreviewCallbackActivity extends Activity {
	protected CameraPreview mPreview;
	
	public abstract void cameraPreviewLoaded();
	
	@Override
    public void onResume() {
        super.onResume();
        if (mPreview != null) {
        	mPreview.resume();
        }
    }
    
    @Override
    public void onPause() {
        super.onPause();
        if (mPreview != null) {
        	mPreview.pause();
        }
    }
    
    @Override
    public void onDestroy() {
        super.onDestroy();
        if (mPreview != null) {
        	mPreview.destroy();
        }
    }
}
