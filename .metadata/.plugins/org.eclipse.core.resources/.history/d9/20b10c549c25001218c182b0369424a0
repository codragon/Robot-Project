package com.example.cameratest.processors;

import com.example.cameratest.listeners.TemplateFrameProcessedListener;

import android.hardware.Camera;

public abstract class BaseFrameProcessor implements FrameProcessor {
	protected Camera mCamera;
	protected TemplateFrameProcessedListener mListener;
	protected android.hardware.Camera.Size mFrameSize;
	
	public abstract void onPreviewFrame(byte[] data, Camera camera);
	
	public void setCamera(Camera camera) {
		this.mFrameSize = camera.getParameters().getPreviewSize();
		this.mCamera = camera;
	}
}
