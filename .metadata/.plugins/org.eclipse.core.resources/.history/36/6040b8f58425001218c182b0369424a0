package com.example.cameratest;

import android.hardware.*;
import android.hardware.Camera.*;

public class CameraPreviewProcessing implements PreviewCallback {
	private long timeStamp = 0;
	private TestFrameProcessedListener mListener;
	private Camera mCamera;
	
	public CameraPreviewProcessing(TestFrameProcessedListener listener, Camera camera) {
		this.mListener = listener;
		this.mCamera = camera;
	}
	
	public void onPreviewFrame(byte[] data, Camera camera) {
		long newTimeStamp = System.currentTimeMillis();
		mCamera.addCallbackBuffer(data);
		mListener.onFrameProcessed(new TestFrameProcessedEvent(newTimeStamp - timeStamp));
		timeStamp = newTimeStamp;
	}
}
