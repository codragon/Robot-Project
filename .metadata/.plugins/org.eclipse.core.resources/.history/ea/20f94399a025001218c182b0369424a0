package com.example.cameratest;

import android.app.Activity;

public abstract class CameraPreviewCallback extends Activity {
	public abstract void cameraPreviewLoaded();
	
	@Override
    public void onResume() {
        super.onResume();
        mPreview.resume();
    }
    
    @Override
    public void onPause() {
        super.onPause();
        mPreview.pause();
    }
    
    @Override
    public void onDestroy() {
        super.onDestroy();
        mPreview.destroy();
    }
}
